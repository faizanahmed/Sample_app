<div class="container">
	<% flash.each do |name,msg| %>
		<% if "#{name}" ==  "notice"%>
			<div class="alert alert-warning">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<%= msg %>
			</div>
		<% else %>
			<div class="alert alert-<%= name %>">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<%= msg %>
			</div>
		<% end %>
	<% end %>
</div>